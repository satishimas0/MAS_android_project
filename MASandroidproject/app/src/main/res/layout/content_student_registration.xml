<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/actionModeSplitBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="traindge.masandroidproject.StudentRegistrationActivity"
    tools:showIn="@layout/activity_student_registration">

    <TextView
        android:id="@+id/textView"
        android:layout_width="393dp"
        android:layout_height="63dp"
        android:background="@android:color/holo_blue_bright"
        android:gravity="center"
        android:text="Student Registration"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/etStdName"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.428"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="-12dp"
        app:layout_constraintHorizontal_bias="0.514" />

    <EditText
        android:id="@+id/etStdName"
        android:layout_width="409dp"
        android:layout_height="49dp"
        android:layout_marginRight="8dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:ems="20"
        android:hint="               Student Name"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="63dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        tools:layout_editor_absoluteX="-6dp" />

    <EditText
        android:id="@+id/etparentName"
        android:layout_width="420dp"
        android:layout_height="58dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:ems="20"
        android:gravity="center"
        android:hint="Father/Mother Name"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="113dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="-24dp" />

    <EditText
        android:id="@+id/etStdMobile"
        android:layout_width="404dp"
        android:layout_height="51dp"
        android:drawableLeft="@drawable/phone_icon"
        android:ems="10"
        android:gravity="center"
        android:hint="Mobile Number"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="172dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="-9dp" />

    <EditText
        android:id="@+id/etStdEmail_id"
        android:layout_width="412dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/mail_icon"
        android:ems="25"
        android:gravity="center"
        android:hint="Email_id"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="225dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="-11dp"
        app:layout_constraintHorizontal_bias="0.6" />

    <EditText
        android:id="@+id/etClgname"
        android:layout_width="423dp"
        android:layout_height="51dp"
        android:drawableLeft="@drawable/ic_school_black_24dp"
        android:ems="30"
        android:gravity="center"
        android:hint="College Name"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="276dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="-24dp"
        app:layout_constraintHorizontal_bias="0.555" />


    <EditText
        android:id="@+id/etClass"
        android:layout_width="409dp"
        android:layout_height="51dp"
        android:drawableLeft="@drawable/ic_school_black_24dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Class"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="329dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.504" />

    <Button
        android:id="@+id/btnStdSubmit"
        android:layout_width="411dp"
        android:layout_height="54dp"
        android:background="@android:color/holo_blue_bright"
        android:text="Submit"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/etStudentPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/etStudentPassword"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="0.493"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/etStudentPassword"
        android:layout_width="396dp"
        android:layout_height="61dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Password"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="387dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.504" />

</android.support.constraint.ConstraintLayout>
