<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/actionModeSplitBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="traindge.masandroidproject.StudentRegistrationActivity"
    tools:showIn="@layout/activity_student_registration">

    <TextView
        android:id="@+id/textView"
        android:layout_width="796dp"
        android:layout_height="110dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_blue_bright"
        android:gravity="center"
        android:text="Student Registration"
        android:textColor="@color/common_google_signin_btn_text_light_disabled"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/etStdName"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/etStdName"
        android:layout_width="788dp"
        android:layout_height="98dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:ems="20"
        android:hint="               Student Name"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/black"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="148dp" />

    <EditText
        android:id="@+id/etparentName"
        android:layout_width="799dp"
        android:layout_height="105dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:ems="20"
        android:gravity="center"
        android:hint="Father/Mother Name"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="246dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/etStdMobile"
        android:layout_width="798dp"
        android:layout_height="98dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:drawableLeft="@drawable/phone_icon"
        android:ems="10"
        android:gravity="center"
        android:hint="Mobile Number"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="360dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/etStdEmail_id"
        android:layout_width="777dp"
        android:layout_height="107dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:drawableLeft="@drawable/mail_icon"
        android:ems="25"
        android:gravity="center"
        android:hint="Email_id"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="470dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/etClgname"
        android:layout_width="783dp"
        android:layout_height="115dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:drawableLeft="@drawable/ic_school_black_24dp"
        android:ems="30"
        android:gravity="center"
        android:hint="College Name"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="589dp"
        app:layout_constraintHorizontal_bias="0.533"
        tools:layout_editor_absoluteX="4dp" />


    <EditText
        android:id="@+id/etClass"
        android:layout_width="812dp"
        android:layout_height="106dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:drawableLeft="@drawable/ic_school_black_24dp"
        android:ems="20"
        android:gravity="center"
        android:hint="Class"
        android:inputType="textPersonName"
        android:textColor="@color/common_google_signin_btn_text_dark_disabled"
        android:textColorHighlight="@android:color/darker_gray"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="723dp" />

    <Button
        android:id="@+id/btnStdSubmit"
        android:layout_width="829dp"
        android:layout_height="99dp"
        android:background="@android:color/holo_blue_bright"
        android:text="Submit"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/etStudentPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/etStudentPassword"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.116" />

    <EditText
        android:id="@+id/etStudentPassword"
        android:layout_width="794dp"
        android:layout_height="99dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Password"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="851dp"
        app:layout_constraintHorizontal_bias="0.02"
        tools:layout_editor_absoluteX="-382dp" />

</android.support.constraint.ConstraintLayout>
